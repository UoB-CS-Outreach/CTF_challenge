        // Load progress from localStorage
        function loadProgress() {
            const saved = localStorage.getItem('ctf-progress-new');
            return saved ? JSON.parse(saved) : {};
        }

        // Save progress to localStorage
        function saveProgress(progress) {
            localStorage.setItem('ctf-progress-new', JSON.stringify(progress));
        }

        // Escape HTML for display
        function escapeHtml(text) {
            const map = {
                '&': '&amp;',
                '<': '&lt;',
                '>': '&gt;',
                '"': '&quot;',
                "'": '&#039;'
            };
            return text.replace(/[&<>"']/g, function(m) { return map[m]; });
        }

        let completedChallenges = loadProgress();

        // Update progress bar
        function updateProgress() {
            const completed = Object.keys(completedChallenges).length;
            const total = challenges.length;
            const percent = (completed / total) * 100;
            
            document.getElementById('completed-count').textContent = completed;
            document.getElementById('total-count').textContent = total;
            document.getElementById('progress-fill').style.width = percent + '%';

            if (completed === total) {
                document.getElementById('completion-banner').classList.add('visible');
            }
        }

        // Download file handler
        function downloadChallengeFile(challengeId) {
            const challenge = challenges.find(c => c.id === challengeId);
            if (challenge && challenge.fileContent) {
                const blob = new Blob([challenge.fileContent], { type: 'text/plain' });
                const url = URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.href = url;
                a.download = challenge.fileName;
                document.body.appendChild(a);
                a.click();
                document.body.removeChild(a);
                URL.revokeObjectURL(url);
            }
        }

        // Render challenges
        function renderChallenges() {
            const container = document.getElementById('challenges-container');
            container.innerHTML = '';

            challenges.forEach(challenge => {
                const isCompleted = completedChallenges[challenge.id];
                
                const challengeDiv = document.createElement('div');
                challengeDiv.className = 'challenge' + (isCompleted ? ' completed' : '');
                challengeDiv.id = 'challenge-' + challenge.id;

                let content = '<div class="challenge-header"><div class="challenge-title-section"><div class="challenge-icon">' + challenge.icon + '</div><div class="challenge-info"><h2>' + challenge.title + '</h2><div class="challenge-tags"><span class="tag tag-category">' + challenge.category + '</span><span class="tag tag-' + challenge.difficulty.toLowerCase() + '">' + challenge.difficulty + '</span></div></div></div>';
                
                if (isCompleted) {
                    content += '<span class="check-icon">‚úì</span>';
                }
                
                content += '</div><div class="challenge-description">' + challenge.description + '</div>';

                // Add file download section
                if (challenge.hasFile && !isCompleted) {
                    content += '<div class="download-section"><p style="color: #e9d5ff; margin-bottom: 0.5rem;">üì• Download the challenge file:</p><button class="download-button" onclick="downloadChallengeFile(\'' + challenge.id + '\')">Download ' + challenge.fileName + '</button></div>';
                }

                if (challenge.codeSnippet || challenge.metadataSnippet) {
                    content += `
                        <div class="code-snippet">
                            <pre>${challenge.codeSnippet || challenge.metadataSnippet}</pre>
                        </div>
                    `;
                }

                // Add interactive login simulator
                if (challenge.hasInteractiveLogin && !isCompleted) {
                    content += '<div class="login-simulator">';
                    content += '<h3>üîê Vulnerable Login System</h3>';
                    content += '<div class="login-form">';
                    content += '<div class="form-group">';
                    content += '<label for="username-' + challenge.id + '">Username:</label>';
                    content += '<input type="text" id="username-' + challenge.id + '" placeholder="Enter username">';
                    content += '</div>';
                    content += '<div class="form-group">';
                    content += '<label for="password-' + challenge.id + '">Password:</label>';
                    content += '<input type="password" id="password-' + challenge.id + '" placeholder="Enter password">';
                    content += '</div>';
                    content += '<button class="login-button" onclick="attemptLogin(\'' + challenge.id + '\')">Login</button>';
                    content += '<div class="sql-query-display" id="sql-display-' + challenge.id + '">SQL Query will appear here...</div>';
                    content += '<div id="login-result-' + challenge.id + '"></div>';
                    content += '</div>';
                    content += '</div>';
                }

                // Add emails display
                if (challenge.hasEmails && !isCompleted) {
                    content += '<div style="display: grid; gap: 1rem; margin-bottom: 1rem;">';
                    challenge.emails.forEach(function(email) {
                        content += '<div class="email-container">';
                        content += '<div class="email-label">Email ' + email.id + '</div>';
                        content += '<div class="email-header">';
                        
                        // Amazon logo SVG
                        if (email.legitimate) {
                            content += '<svg class="email-logo" viewBox="0 0 100 30" xmlns="http://www.w3.org/2000/svg"><text x="0" y="20" font-family="Arial, sans-serif" font-size="20" font-weight="bold" fill="#FF9900">amazon</text><path d="M 15 22 Q 50 28 85 22" stroke="#FF9900" stroke-width="2" fill="none"/><path d="M 80 20 L 85 22 L 80 24" fill="#FF9900"/></svg>';
                        } else {
                            content += '<svg class="email-logo" viewBox="0 0 100 30" xmlns="http://www.w3.org/2000/svg"><text x="0" y="20" font-family="Arial, sans-serif" font-size="20" font-weight="bold" fill="#dc2626">amaz0n</text><path d="M 15 22 Q 50 28 85 22" stroke="#dc2626" stroke-width="2" fill="none"/><path d="M 80 20 L 85 22 L 80 24" fill="#dc2626"/></svg>';
                        }
                        
                        content += '<div class="email-from"><strong>From:</strong> ' + email.from + '</div>';
                        content += '<div class="email-subject">' + email.subject + '</div>';
                        content += '</div>';
                        
                        content += '<div class="email-body">';
                        content += email.body.replace(/\n/g, '<br>');
                        content += '<br><br>';
                        content += '<a href="#" class="email-link' + (email.legitimate ? '' : ' suspicious') + '" onclick="event.preventDefault(); alert(\'Link: ' + email.linkUrl + '\');">' + email.link + '</a>';
                        content += '</div>';
                        
                        content += '<div class="email-footer">' + email.footer.replace(/\n/g, '<br>') + '</div>';
                        content += '</div>';
                    });
                    content += '</div>';
                }

                if (!isCompleted) {
                    content += '<button class="hint-button" onclick="toggleHint(\'' + challenge.id + '\')">üí° <span id="hint-text-' + challenge.id + '">Show Hint</span></button>';
                    content += '<div class="hint-box" id="hint-' + challenge.id + '">' + challenge.hint + '</div>';
                    content += '<div class="answer-section"><input type="text" class="answer-input" id="answer-' + challenge.id + '" placeholder="Enter flag (format: CTF{...})" onkeypress="if(event.key === \'Enter\') submitAnswer(\'' + challenge.id + '\')"><button class="submit-button" onclick="submitAnswer(\'' + challenge.id + '\')">Submit</button></div>';
                    content += '<div class="feedback feedback-incorrect" id="feedback-' + challenge.id + '">‚úó Incorrect flag. Try again or check the hint!</div>';
                } else {
                    content += '<div class="feedback feedback-correct visible">‚úì Challenge Completed!</div>';
                }

                content += '<div class="explanation ' + (isCompleted ? 'visible' : '') + '" id="explanation-' + challenge.id + '"><h3>Explanation</h3><p>' + challenge.explanation + '</p><h4>Key Learning Points:</h4><ul>';
                
                challenge.learningPoints.forEach(function(point) {
                    content += '<li>' + point + '</li>';
                });
                
                content += '</ul></div>';

                challengeDiv.innerHTML = content;
                container.appendChild(challengeDiv);
            });
        }

        function toggleHint(challengeId) {
            const hintBox = document.getElementById('hint-' + challengeId);
            const hintText = document.getElementById('hint-text-' + challengeId);
            
            if (hintBox.classList.contains('visible')) {
                hintBox.classList.remove('visible');
                hintText.textContent = 'Show Hint';
            } else {
                hintBox.classList.add('visible');
                hintText.textContent = 'Hide Hint';
            }
        }

        function attemptLogin(challengeId) {
            const username = document.getElementById('username-' + challengeId).value;
            const password = document.getElementById('password-' + challengeId).value;
            const sqlDisplay = document.getElementById('sql-display-' + challengeId);
            const resultDiv = document.getElementById('login-result-' + challengeId);

            // Build the vulnerable SQL query
            const sqlQuery = "SELECT * FROM users WHERE username='" + username + "' AND password='" + password + "'";
            
            // Display the SQL query
            sqlDisplay.textContent = 'Executed SQL Query:\n' + sqlQuery;

            // Check for SQL injection
            const isInjection = username.includes("'--") || username.includes("'#") || username.includes("' OR '1'='1");
            
            if (isInjection) {
                // Successful SQL injection
                resultDiv.innerHTML = '<div class="login-result success">‚úì Login Successful! Authentication bypassed!</div>';
                resultDiv.innerHTML += '<div class="flag-reveal">üéâ FLAG REVEALED: CTF{sql_injection_success}</div>';
                
                // Auto-fill the answer and mark as complete after a short delay
                setTimeout(function() {
                    const answerInput = document.getElementById('answer-' + challengeId);
                    if (answerInput) {
                        answerInput.value = 'CTF{sql_injection_success}';
                    }
                    // Scroll to the submit button
                    resultDiv.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
                }, 1000);
            } else {
                // Failed login attempt
                resultDiv.innerHTML = '<div class="login-result failure">‚úó Login Failed: Invalid username or password</div>';
            }
        }


        function submitAnswer(challengeId) {
            const challenge = challenges.find(function(c) { return c.id === challengeId; });
            const input = document.getElementById('answer-' + challengeId);
            const feedback = document.getElementById('feedback-' + challengeId);
            
            if (input.value.trim() === challenge.flag) {
                // Correct answer
                completedChallenges[challengeId] = true;
                saveProgress(completedChallenges);
                updateProgress();
                renderChallenges();
                
                // Scroll to explanation
                setTimeout(function() {
                    document.getElementById('challenge-' + challengeId).scrollIntoView({ 
                        behavior: 'smooth', 
                        block: 'nearest' 
                    });
                }, 100);
            } else {
                // Incorrect answer
                feedback.classList.add('visible');
                setTimeout(function() {
                    feedback.classList.remove('visible');
                }, 2000);
            }
        }

        // Initialize
        updateProgress();
        renderChallenges();
    </script>
</body>
</html>
